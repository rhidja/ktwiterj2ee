<?xml version="1.0" encoding="UTF-8"?>
<web-app 
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
      
    <!-- Les servelets REST -->
    <servlet>
        <servlet-name>jersey-serlvet</servlet-name>
        <servlet-class> com.sun.jersey.spi.container.servlet.ServletContainer </servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>ktwtr.rest</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>                
        <load-on-startup>1</load-on-startup>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>jersey-serlvet</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
 
  	<!-- Les servelets WEB -->
    <servlet>
        <servlet-name>jersey-serlvet-web</servlet-name>
        <servlet-class> com.sun.jersey.spi.container.servlet.ServletContainer </servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>ktwtr.rest</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>jersey-serlvet-web</servlet-name>
        <url-pattern>/web/*</url-pattern>
    </servlet-mapping>

   	<!-- Les servelets CLASSIQUE -->
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>ktwtr.Home</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Members</servlet-name>
        <servlet-class>ktwtr.Members</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>Members</servlet-name>
        <url-pattern>/members</url-pattern>
    </servlet-mapping>
    
</web-app>